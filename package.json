{
    "name": "test-deploy",
    "version": "1.0.0",
    "description": "Empty ts express app",
    "main": "dist/server.js",
    "scripts": {
        "start": "npm run build && node dist/server.js",
        "build": "rimraf dist && tsc",
        "dev": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' -r dotenv/config server.ts",
        "test": "rimraf coverage && jest"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Yakubko/test-deploy.git"
    },
    "keywords": [],
    "author": "Jakub Miskech <yakubmiskech@gmail.com>",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/Yakubko/test-deploy/issues"
    },
    "homepage": "https://github.com/Yakubko/test-deploy#readme",
    "dependencies": {
        "app-root-path": "^3.0.0",
        "compression": "^1.7.4",
        "express": "^4.17.1",
        "helmet": "^3.22.0",
        "http-errors": "^1.7.3",
        "morgan": "^1.10.0",
        "winston": "^3.2.1"
    },
    "devDependencies": {
        "@types/app-root-path": "^1.2.4",
        "@types/compression": "^1.7.0",
        "@types/express": "^4.17.6",
        "@types/helmet": "0.0.47",
        "@types/http-errors": "^1.6.3",
        "@types/jest": "^25.2.3",
        "@types/morgan": "^1.9.0",
        "@types/node": "^14.0.5",
        "@types/supertest": "^2.0.9",
        "@types/winston": "^2.4.4",
        "@typescript-eslint/eslint-plugin": "^3.0.2",
        "@typescript-eslint/parser": "^3.0.2",
        "coveralls": "^3.1.0",
        "dotenv": "^8.2.0",
        "eslint": "^7.1.0",
        "eslint-config-prettier": "^6.11.0",
        "eslint-plugin-prettier": "^3.1.3",
        "jest": "^26.0.1",
        "nodemon": "^2.0.4",
        "prettier": "^2.0.5",
        "supertest": "^4.0.2",
        "ts-jest": "^26.0.0",
        "ts-node": "^8.10.1",
        "typescript": "^3.9.3"
    },
    "jest": {
        "testEnvironment": "node",
        "collectCoverage": true,
        "collectCoverageFrom": [
            "src/**/*.{ts,tsx}"
        ],
        "coveragePathIgnorePatterns": [
            "/node_modules/"
        ],
        "transform": {
            "^.+\\.(ts|tsx)$": "ts-jest"
        }
    }
}
